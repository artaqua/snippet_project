    .header-page__inner
      a.logo(href="index.html")
        img(src=`${baseDir}assets/img/logo.png`, alt="")
      button.btn-menu.header-page__btn-menu
        span.btn-menu__lines
          span.btn-menu__line.btn-menu__line_one
          span.btn-menu__line.btn-menu__line_two
          span.btn-menu__line.btn-menu__line_three
